- if @site.present? && @site.persisted?
  %li= active_link_to t('comfy.admin.cms.base.blogs'), comfy_admin_blogs_path(@site)
  - if @blog.present? && @blog.persisted?
    %ul
      %li= active_link_to t('comfy.admin.cms.base.posts'), comfy_admin_blog_posts_path(@site, @blog)
      %li= active_link_to t('comfy.admin.cms.base.categories'), comfy_admin_blog_categories_path(@site, @blog)
      %li= active_link_to t('comfy.admin.cms.base.authors'), comfy_admin_blog_authors_path(@site, @blog)
      %li= active_link_to t('comfy.admin.cms.base.comments'), comfy_admin_blog_comments_path(@site, @blog)
