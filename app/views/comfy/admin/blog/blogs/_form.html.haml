= form.text_field :label, label: "Label*"
= form.text_field :identifier, label: "Identifier*", :data => {:slug => true}
= form.text_field :path

- if (options = Comfy::Cms::Layout.app_layouts_for_select [File.join(Rails.root, 'app', 'views')]).present?
  = form.select :app_layout, options

= form.text_area :description, :class => 'short'

= form.form_group :class => 'form-actions' do
  = form.submit :class => 'btn btn-primary'
  = link_to t('.cancel'), comfy_admin_blogs_path(@site), :class => 'btn btn-link'
